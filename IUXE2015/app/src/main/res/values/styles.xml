<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.Setup" parent="Theme.AppCompat.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/theme3</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/theme2</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Normal" parent="AppTheme">
        <item name="android:buttonStyle">@style/ButtonNormal</item>
    </style>
    <style name="AppTheme.Large" parent="AppTheme">
        <item name="android:buttonStyle">@style/ButtonLarge</item>
    </style>
    <style name="AppTheme.Huge" parent="AppTheme">
        <item name="android:buttonStyle">@style/ButtonHuge</item>
    </style>

    <style name="ButtonNormal" parent="android:style/Widget.Button">
    </style>

    <style name="ButtonLarge" parent="android:style/Widget.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonHuge" parent="android:style/Widget.Button">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_margin">30dp</item>
    </style>



</resources>
