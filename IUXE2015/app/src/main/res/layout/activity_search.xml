<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.undefined.iuxe2015.activities.SearchActivity"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/music_controller"
            android:name="com.undefined.iuxe2015.fragments.MusicControllerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_setup" />

        <fragment
            android:id="@+id/search"
            android:name="com.undefined.iuxe2015.fragments.SearchFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/music_controller"
            tools:layout="@layout/fragment_setup" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="showOverlay"
        android:src="@drawable/ic_fab_help"
        android:tint="@color/hub_help_darker"
        fab:fab_colorNormal="@color/hub_help"
        fab:fab_colorPressed="@color/hub_help_pressed"
        fab:fab_colorRipple="@color/ripple" />

    <RelativeLayout
        android:id="@+id/search_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_bg"
        android:clickable="true"
        android:elevation="8dp"
        android:onClick="hideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/help_title"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/help_search_title"
                android:textColor="@color/overlay_title"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/help_search_text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/overlay_text" />

            <TextView
                android:id="@+id/help_remove_overlay_text"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/help_click_overlay_to_hide"
                android:textColor="@color/overlay_text"
                android:textSize="30sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
