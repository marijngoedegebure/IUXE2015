<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.undefined.iuxe2015.activities.SearchActivity"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/search"
            android:name="com.undefined.iuxe2015.fragments.SearchFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.00"
            tools:layout="@layout/fragment_setup" />

        <fragment
            android:id="@+id/music_controller"
            android:name="com.undefined.iuxe2015.fragments.MusicControllerFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:layout="@layout/fragment_setup" />
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="showOverlay"
        android:src="@drawable/ic_fab_help"
        android:tint="@color/hub_help_darker"
        fab:fab_colorNormal="@color/hub_help"
        fab:fab_colorPressed="@color/hub_help_pressed"
        fab:fab_colorRipple="@color/ripple" />

    <RelativeLayout
        android:id="@+id/search_help"
        android:layout_width="match_parent"
        android:clickable="true"
        android:onClick="hideOverlay"
        android:elevation="8dp"
        android:layout_height="match_parent"
        android:background="@color/overlay_bg">

    </RelativeLayout>

</RelativeLayout>
