<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="4"
        tools:context=".HubActivity$PlaceholderFragment">

        <Button
            android:id="@+id/hub_btn_music"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:background="@drawable/bg_hub_music"
            android:text="@string/hub_music"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/hub_music_darker"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hub_btn_contacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_hub_contacts"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:text="@string/hub_contacts"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/hub_contacts_darker"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hub_btn_messaging"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@drawable/bg_hub_messaging"
            android:onClick="onButtonClick"
            android:text="@string/hub_messaging"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/hub_messaging_darker"
            android:textSize="32sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hub_btn_help"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:background="@drawable/bg_hub_help"
            android:text="@string/hub_help"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/hub_help_darker"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>